generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  quantity    Int
  price       Float
  stockInputs StockInput[]
  stockOutputs StockOutput[]
}

model StockInput {
  id          Int      @id @default(autoincrement())
  productId   Int
  quantity    Int
  date       DateTime 
  product     Product  @relation(fields: [productId], references: [id])
}

model StockOutput {
  id          Int      @id @default(autoincrement())
  productId   Int
  quantity    Int
  date       DateTime 
  product     Product  @relation(fields: [productId], references: [id])
}